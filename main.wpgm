import wollok.game.*

import objects.*

program PepitaGame {
    game.title("Fulbot")
    game.boardGround("pitch.jpg")
    game.height(100)
    game.width(100)
    game.cellSize(10)

//CREAR OBJETOS 

    const jugador1 = new Jugador( cansancio = 0, imagen = "brasil2.png")
    const jugador2 = new Jugador( cansancio = 0, imagen = "jugadorsito.png")

//ADD VISUAL OBJETOS

    game.addVisual(jugador1)

    game.addVisual(jugador2)

    game.addVisual(banana)

//EVENTOS

    game.whenCollideDo(banana, { elemento =>
    game.say(elemento,elemento.howAreYou())
    elemento.recuperarEnergia(banana.energia())
    //AÃ‘ADIR UN REMOVE PARA EL VISUAL
    })



    //TENEMOS QUE HACER QUE CUANDO PASE CIERTA CANTIDAD DE TICKS LA BANANA O CUALQUIER ITEM REAPARESCA, Y QUE EN COLISION DESAPARESCA 
    game.onTick(30000, "movimiento", { banana.movete() })
    game.onTick(2000, "movimiento", { jugador1.recuperarEnergia(10) })

    keyboard.w().onPressDo({ jugador1.moverteArriba(5) })
    keyboard.a().onPressDo({ jugador1.moverteIzquierda(5) })
    keyboard.s().onPressDo({ jugador1.moverteAbajo(5) })
    keyboard.d().onPressDo({ jugador1.moverteDerecha(5) })

    keyboard.i().onPressDo({ jugador2.moverteArriba(5) })
    keyboard.j().onPressDo({ jugador2.moverteIzquierda(5) })
    keyboard.k().onPressDo({ jugador2.moverteAbajo(5) })
    keyboard.l().onPressDo({ jugador2.moverteDerecha(5) })

    game.start()
} 
